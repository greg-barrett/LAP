<h1>Reservations#new</h1>
<%= form_for @reservation do |f| %>
<% if @reservation.errors.any? %>
  <% @reservation.errors.messages.each do |message| %>
      <p><%= message %></p>
  <% end %>
<% end %>
<p>Booking Information</p>
<%= f.hidden_field :reserver_id, value: @reservation.reserver_id %>
<%= f.label :Arrival_Date %>
<%= f.date_select :arrival_date, :order =>[:day, :month, :year], :start_year => Date.today.year, :end_year => Date.today.year+1,  required: true %><br />
<%= f.label :Departure_Date %>
<%= f.date_select :departure_date, :order =>[:day, :month, :year], :start_year => Date.today.year, :end_year => Date.today.year+1, required: true %><br />
  <%= f.label :party_size %>
  <%= f.select :party_size, [1, 2, 3, 4, 5, 6 ], required: true %><br />

  <%= f.label :notes %>
  <%= f.text_field :notes %><br />

  <%= f.submit %>
<% end  %>
