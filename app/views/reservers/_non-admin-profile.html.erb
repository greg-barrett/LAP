<section class="welcome-area green-background">
  <div class="welcome-instructions">
    <h1 class="med-heading">Salut <%= @reserver.title + " " + @reserver.last_name %>!</h1>
    <p>Here, you are able to review your upcoming reservations and create new ones.</p>
    <p>You can also amend upcoming reservations and your personal details</p>
    <p>If you have any questions or want to get in touch, email us at lap@gmail.com</p>
  </div>
</section>
<section class="profile-main">
  <section class="one-half">
    <div class="search-form-frame green-border" id="reserver-expander">
      <div class="upcoming-stays green-background">
        <h2 class="normal-heading">Upcoming Stays</h2>
        <% @upcoming_reservations.each do |reservation|  %>
          <p class="dates"><%= link_to reservation.arrival_date.strftime("%A %d %B %Y"), reservation_path(reservation.id)  %></p>
        <% end %>
      </div>
      </div>
  </section>

  <section class="one-half">
    <div class="option search-form-frame green-border" id="reserver-expander">
      <div class="option-content green-background">
        <h2 class="normal-heading"><%= link_to "Create a new reservation", calendar_path(Date.today, :reserver_id => @reserver.id) %></h2>
      </div>
    </div>

    <div class="option search-form-frame green-border" id="reserver-expander">
      <div class="option-content green-background">
        <h2 class="normal-heading"><%= link_to "All Reservations", reservations_path(:reserver_id => @reserver.id) %></h2>
      </div>
    </div>

    <div class="option search-form-frame green-border" id="reserver-expander">
      <div class="option-content green-background">
        <h2 class="normal-heading"><%= link_to "Update my Details", edit_reserver_path(@reserver)  %></h2>
      </div>
    </div>
  </section>
</section>
