<h1>Reserver#new</h1>
<% if @reserver.errors.any? %>
  <% @reserver.errors.messages.each do |message| %>
      <p><%= message %></p>
  <% end %>
<% end %>
<% if @reservation.errors.any? %>
  <% @reservation.errors.messages.each do |message| %>
      <p><%= message %></p>
  <% end %>
<% end %>

<%= form_for @reserver do |r| %>
<p>Your Details</p>
  <%= r.label :title %>
  <%= r.select :title, ["Mr", "Miss", "Mrs", "Ms", "other" ], required: true%><br />

  <%= r.label :first_name %>
  <%= r.text_field :first_name, required: true %><br />

  <%= r.label :last_name %>
  <%= r.text_field :last_name, required: true %><br />

  <%= r.label :email_address %>
  <%= r.email_field :email_address, required: true %><br />

  <%= r.label :email_address_confirmation %>
  <%= r.email_field :email_address_confirmation, required: true %><br />

  <%= r.label :contact_number %>
  <%= r.text_field :contact_number, required: true %><br />

  <%= r.label :id_type %>
  <%= r.select :id_type, ["Passport", "Drivers license" ], required: true %><br />

  <%= r.label :id_number %>
  <%= r.text_field :id_number, required: true %><br />

  <%= r.label :house_number %>
  <%= r.text_field :house_number, required: true %><br />

  <%= r.label :street_name %>
  <%= r.text_field :street_name, required: true %><br />
  <%= r.label :city %>
  <%= r.text_field :city, required: true %><br />
  <%= r.label :country %>
  <%= r.text_field :country, required: true %><br />
  <%= r.label :postcode %>
  <%= r.text_field :postcode, required: true %><br />

  <%= r.label :password %>
  <%= r.password_field :password, required: true %><br />
  <%= r.label :password_confirmation %>
  <%= r.password_field :password_confirmation, required: true %><br />

  <p>Booking Information</p>
  <%= r.fields_for @reservation do |f| %>
    <%= f.label :Arrival_Date %>
    <%= f.date_select :arrival_date, :order =>[:day, :month, :year], :start_year => Date.today.year, :end_year => Date.today.year+1,  required: true %><br />
    <%= f.label :Departure_Date %>
    <%= f.date_select :departure_date, :order =>[:day, :month, :year], :start_year => Date.today.year, :end_year => Date.today.year+1, required: true %><br />
    <%= f.label :party_size %>
    <%= f.select :party_size, [1, 2, 3, 4, 5, 6 ], required: true %><br />

    <%= f.label :notes %>
    <%= f.text_field :notes %><br />
  <% end %>


  <%= r.submit "Make Reservation" %>
<% end  %>
